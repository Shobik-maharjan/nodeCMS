<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="styles/allBlogs.css" />
  </head>
  <body>
    <%- include("./navbar.ejs") %>

    <div class="container">
      <% blogs.forEach((blogs)=>{ %>
      <div class="blog-card">
        <img class="blog-image" src="<%- blogs.imageUrl %>" alt="Blog Image" />
        <div class="blog-title"><%- blogs.title %></div>
        <div class="blog-subtitle"><%- blogs.subTitle %></div>
        <div class="blog-description"><%- blogs.description %></div>
        <a href="blogs/<%-blogs.id %>">See More</a>
      </div>
      <% }) %>

      <!-- Add more blog cards here as needed -->
    </div>

    <%- include("./footer.ejs") %>
  </body>
</html>
